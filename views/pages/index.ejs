<%- include('header'); -%>
<div class="site-content">
    <div class="site-header">
        <div class="container">
            <a href="index.html" class="branding">
                <img src="images/logo.png" alt="" class="logo">
                <div class="logo-type">
                    <h1 class="site-title">AK</h1>
                    <small class="site-description">Technologie</small>
                </div>
            </a>

            <!-- Default snippet for navigation -->
            <div class="main-navigation">
                <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                <ul class="menu">
                    <li class="menu-item current-menu-item"><a href="">Home</a></li>
                </ul> <!-- .menu -->
            </div> <!-- .main-navigation -->

            <div class="mobile-navigation"></div>

        </div>  
    </div>
    <div class="forecast-table">
        <div class="container">
            <div class="forecast-container">
                <div class="today forecast">
                    <div class="forecast-header">
                        <div class="day"><%= JSON.parse(JSON.stringify(data.forecast.datetime))%></div>
                        <!-- <div class="date">6 Oct</div> -->
                    </div> <!-- .forecast-header -->
                    <div class="forecast-content">
                        <div class="location"><%= JSON.parse(JSON.stringify(data.city.name)) %></div>
                        <div class="degree">
                            <div class="num"><%= JSON.parse(JSON.stringify(data.forecast.tmax)) %><sup>o</sup>C</div>
                            <div class="forecast-icon">
                                <% if(JSON.parse(JSON.stringify(data.forecast.probarain)) < 50){ %>
                                <img src="/assets/img/icons/icon-1.svg" alt="" width=90>
                                <% } %>
                                <% if(JSON.parse(JSON.stringify(data.forecast.probarain)) > 50){ %>
                                    <img src="/assets/img/icons/icon-12.svg" alt="" width=48>
                                <% } %>
                            </div>	
                        </div>
                        <span><img src="/assets/img/icon-umberella.png" alt=""><%= JSON.parse(JSON.stringify(data.forecast.probarain)) %>%</span>
                        <span><img src="/assets/img/icon-wind.png" alt=""><%= JSON.parse(JSON.stringify(data.forecast.wind10m)) %>km/h</span>
                        <span><img src="/assets/img/icon-compass.png" alt=""><%= JSON.parse(JSON.stringify(data.forecast.dirwind10m)) %>°</span>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">gel</div>
                    </div> <!-- .forecast-header -->
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-13.svg" alt="" width=48>
                        </div>
                        <div class="degree"><%= JSON.parse(JSON.stringify(data.forecast.probafrost)) %>%</div>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">brouillard</div>
                    </div> <!-- .forecast-header -->
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-7.svg" alt="" width=48>
                        </div>
                        <div class="degree"><%= JSON.parse(JSON.stringify(data.forecast.probafog)) %>%</div>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Température minimale</div>
                    </div> <!-- .forecast-header -->
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-7.svg" alt="" width=48>
                        </div>
                        <div class="degree"><%= JSON.parse(JSON.stringify(data.forecast.tmin)) %><sup>o</sup>C</div>
                    </div>
                </div>
                <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Température maximale</div>
                    </div> <!-- .forecast-header -->
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-12.svg" alt="" width=48>
                        </div>
                        <div class="degree"><%= JSON.parse(JSON.stringify(data.forecast.tmax)) %><sup>o</sup>C</div>
                    </div>
                </div>
                <!-- <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Saturday</div>
                    </div> 
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-13.svg" alt="" width=48>
                        </div>
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div> -->
                <!-- <div class="forecast">
                    <div class="forecast-header">
                        <div class="day">Sunday</div>
                    </div>
                    <div class="forecast-content">
                        <div class="forecast-icon">
                            <img src="/assets/img/icons/icon-14.svg" alt="" width=48>
                        </div>
                        <div class="degree">23<sup>o</sup>C</div>
                        <small>18<sup>o</sup></small>
                    </div>
                </div> -->
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/jquery-1.11.1.min.js"></script>
<script src="/assets/js/plugins.js"></script>
<script src="/assets/js/app.js"></script>

</body>
</html>